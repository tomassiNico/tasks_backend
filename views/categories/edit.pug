doctype html
html
  head
    title Categorias
  body
    form(action=`/categories/${category.id}?_method=PUT` method="POST")
      input(type="text"  name="title" placeholder="Escriba el titulo aqui...")= category.title
      input(type="color" name="color")= category.color
      input(type="submit" value="Modificar")
